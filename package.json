{
  "name": "aml",
  "version": "0.1.0",
  "description": "an app to help you get things done in your daily life",
  "private": true,
  "author": "Ibrahim Saberi <georgeipsum@gmail.com>",
  "main": "public/electron.js",
  "homepage": "https://georgeipsum.github.io/fruition",
  "scripts": {
    "dev": "yarn react-scripts start",
    "build": "react-scripts build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "test": "react-scripts test",
    "pack": "electron-builder --dir",
    "dist": "npx build --x64 --maxos --win --linux --c.extraMetadata.main=build/electron.js -p always",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "gh-deploy": "gh-pages -d build",
    "predeploy": "react-scripts build",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "apisauce": "^1.0.5",
    "electron-is-dev": "^1.1.0",
    "firebase": "^6.4.2",
    "mobx": "^5.13.0",
    "mobx-react": "^6.1.3",
    "mobx-state-tree": "^3.14.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-feather": "^2.0.3",
    "react-scripts": "^3.1.1",
    "typescript": "^3.5.3",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.1.2",
    "@testing-library/react": "^9.3.0",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.2",
    "@types/react-dom": "^16.8.5",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.0",
    "electron": "^11.5.0",
    "electron-builder": "^21.2.0",
    "electron-devtools-installer": "^2.2.4",
    "gh-pages": "^2.1.1",
    "node-sass": "^4.12.0",
    "react-dev-utils": "^9.0.3",
    "source-map-explorer": "^2.0.1",
    "version-bump-prompt": "^5.0.4",
    "wait-on": "^3.3.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/app/*.{tsx,ts}",
      "src/components/*.{tsx,ts}",
      "src/components/**/*.{tsx,ts}",
      "src/dummies/*.{tsx,ts}",
      "src/dummies/**/*.{tsx,ts}",
      "src/models/*.{tsx,ts}",
      "src/models/**/*.{tsx,ts}",
      "src/segments/*.{tsx,ts}",
      "src/segments/**/*.{tsx,ts}",
      "src/services/*.{tsx,ts}",
      "src/services/**/*.{tsx,ts}",
      "src/utilities/*.{tsx,ts}",
      "!src/utilities/helpers.ts"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.aml",
    "compression": "normal",
    "productName": "aml",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "type": "distribution",
      "target": [
        "pkg",
        "dmg",
        "mas"
      ],
      "publish": {
        "provider": "s3",
        "bucket": "aml-releases",
        "path": "releases"
      },
      "category": "public.app-category.utilities"
    },
    "mas": {
      "entitlements": "assets/entitlements.mas.plist",
      "entitlementsInherit": "assets/entitlements.mas.inherit.plist",
      "provisioningProfile": "assets/embedded.provisionprofile"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "publish": {
        "provider": "s3",
        "bucket": "aml-releases",
        "path": "releases"
      }
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "snap",
        "AppImage"
      ],
      "description": "Example",
      "category": "Network;Feed",
      "publish": {
        "provider": "s3",
        "bucket": "aml-releases",
        "path": "releases"
      }
    }
  }
}
